<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.lifestylefiture.lifestyledetail.LifestyleDetailActivity">

    <FrameLayout
        android:id="@+id/frame_detail_lifestyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_detail_lifestyle"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/title_detail_lifestyle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/title_lifestyle"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_detail_lifestyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_insum"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="16dp"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>