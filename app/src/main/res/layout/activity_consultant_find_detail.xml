<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ConsultFindDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">


        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/selfPhoto"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="@drawable/rounded_all"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_face_24"
            app:siShape="@drawable/rounded_all" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="20sp"
            android:background="@drawable/round_yellow"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/sertifikat_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sertifikat keahlian"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="description"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/noHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="noHp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:backgroundTint="@color/yellow">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                android:text="Rp. 0" />


            <ImageView
                android:id="@+id/changePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/image"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_create_24"
                android:visibility="gone"
                app:tint="@color/yellow" />

              

        </LinearLayout>


        <TextView
            android:id="@+id/liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 Orang Merekomndasikan dia" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/grey" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sertifikat Keahlian" />

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/keahlian"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_all"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_face_24"
            app:siShape="@drawable/rounded_all" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_yellow"
            android:textColor="@color/black"
            android:text="Saya ingin menggunakan jasa pakar ini" />

        <Button
            android:id="@+id/merekomendasikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_yellow"
            android:textColor="@color/black"
            android:text="Saya merekomendasikan dia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/telponPakar"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Telpon Pakar"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_yellow"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle" />


            <Button
                android:id="@+id/chatPakar"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Chat Pakar"
                android:background="@drawable/round_yellow"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>